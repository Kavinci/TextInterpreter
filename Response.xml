<?xml version="1.0" encoding="utf-8" ?>
<data>
  <var type="help" val="1" max="2"/>
  <var type="greeting" val="1"/>
  <var type="name" val="Charlie"/>
  <var type="inventory" val="0" max="3"/>
  <inventory type="cup" bool="false"/>
  <inventory type="note" bool="false"/>
  <inventory type="desk" bool="false"/>
  <delimeter>
    to
    the
    with
    on
  </delimeter>
  <delimiter val=" " type="ASCII"/>
  <delimiter val="to" type="preposition"/>
  <delimiter val="the" type="adjective"/>
  <delimiter val="with" type="preposition"/>
  <delimiter val="on" type="preposition"/>
  <keywords>
    <greeting val="hello" type="greeting"/>
    <greeting val="hi" type="greeting"/>
    <greeting val="greetings" type="greeting"/>
    <noun val="cup" type="cup"/>
    <noun val="desk" type="desk"/>
    <noun val="note" type="note"/>
    <verb val="place" type="put"/>
    <verb val="put" type="put"/>
    <verb val="grab" type="take"/>
    <verb val="pickup" type="take"/>
    <verb val="take" type="take"/>
    <conjunction val="and" type="conjunction"/>
    <conjunction val="but" type="conjunction"/>
    <conjunction val="yet" type="conjunction"/>
    <preposition val="on" type="preposition"/>
    <preposition val="in" type="preposition"/>
    <preposition val="with" type="preposition"/>
    <preposition val="to" type="preposition"/>
    <adjective val="the" type="adjective"/>
  </keywords>

  <responses>
    <start>
      This interpreter interprets natural language short sentences to give responses based on keywords. 
      Type HELP for assistance, CLEAR to clear the screen, and EXIT or QUIT to terminate the application.

    </start>
    <help count="1">
      Try phrasing your responses with a verb, noun, or greeting from the lists below.
      Verbs: Place, Put, Grab, Pickup, Take, Look
      
      Noun: Cup, Note, Desk
      
      Greeting: Greetings, Hello, Hi
    </help>
    <greeting count="1">Greetings! My name is #name. Nice to meet you.</greeting>
    <action type="take;cup">
      Ok, you now have a cup.
    </action>
    <action type="look;cup">
      It's a cup. You put liquids in it and you drink from it.
    </action>
    <action type="put;cup;note" placement="on">
      Ok, you have placed the cup on the note.
    </action>
    <action type="put;cup;note" placement="in">
      You can't do that, it won't fit.
    </action>
    <action type="put;cup;desk" placement="on">
      Ok, you placed the cup on the desk.
    </action>
    <action type="put;cup;desk" placement="in"></action>
    <action type="take;desk">
      You can't do that, the desk is too heavy to carry alone.
    </action>
    <action type="look;desk">
      It's a desk....
    </action>
    <action type="put;desk;note" placement="on"></action>
    <action type="put;desk;note" placement="in"></action>
    <action type="put;desk;cup" placement="on"></action>
    <action type="put;desk;cup" placement="in"></action>
    <action type="take;note"></action>
    <action type="look;note"></action>
    <action type="put;note;desk" placement="on"></action>
    <action type="put;note;desk" placement="in"></action>
    <action type="put;note;cup" placement="on"></action>
    <action type="put;note;cup" placement="in"></action>
    <action type="idk">I don't know how to do that</action>
  </responses>
</data>